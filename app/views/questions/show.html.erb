
<h1><%= @question.title %></h1>
<h1><%= @question.content %></h1>




<p><%= link_to "Edit", edit_question_path(@question) %></p>
<p><%= link_to "Delete", question_path(@question),
                         :data => {:confirm => "You sure?",
                                   :method => "delete"} %></p>
<p><%= link_to "Return to questions", questions_path %></p>

<!-- Add path to answer -->
<p><%= link_to "Add an Answer", new_question_answer_path(@question) %></p>

<% if @question.answers.any? %>
<hr>
  <h3>Answers:</h3>

  <ul>
  <% @question.answers.each do |answer| %>
    <li>
      <%= answer.answer_content %>

    </li>
  <% end %>
</ul>
<% else %>
<p>Be the first to add a answer!</p>
<% end %>
